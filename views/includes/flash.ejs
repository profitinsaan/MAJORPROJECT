<% if (success && success.length) { %>
    <div class="row">
       <div class="alert alert-info alert-dismissible fade show offset-2 col-6 text-center" role="alert">
          <%= success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
       </div>
    </div>
    <% } %>
      
    <!-- for error -->

    <% if (error && error.length) { %>
        <div class="row">
           <div class="alert alert-danger alert-dismissible fade show offset-2 col-6 text-center" role="alert">
              <%= error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
           </div>
        </div>
        <% } %>
        