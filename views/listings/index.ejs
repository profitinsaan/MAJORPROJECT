<% layout("/layouts/boilerplate.ejs") %>

<style>
    #filters {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .filter {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1.5rem;
    }

    .filter-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        cursor: pointer;
        transition: transform 0.2s ease-in-out;
        opacity: 0.85;
    }

    .filter-item:hover {
        transform: scale(1.1);
        opacity: 1;
    }

    .filter-item i {
        font-size: 1.5rem;
        margin-bottom: 0.3rem;
    }

    .filter-item p {
        font-size: 0.9rem;
    }

    .tax-info {
        display: none;
    }

    .tax-toggle {
        display: flex;
        justify-content: center;
    }

    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s;
    }

    .card:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .listing-link {
        text-decoration: none;
        color: inherit;
    }
</style>

<div id="filters">
    <div class="filter">
        <% const filterOptions = [
            { icon: 'fa-fire', label: 'Trending' },
            { icon: 'fa-bed', label: 'Rooms' },
            { icon: 'fa-mountain-city', label: 'Iconic Cities' },
            { icon: 'fa-mountain-sun', label: 'Mountains' },
            { icon: 'fa-person-swimming', label: 'Swimming Pool' },
            { icon: 'fa-chess-rook', label: 'Castles' },
            { icon: 'fa-snowflake', label: 'Arctic' },
            { icon: 'fa-tractor', label: 'Farms' },
            { icon: 'fa-campground', label: 'Camping' },
            { icon: 'fa-igloo', label: 'Dome' },
            { icon: 'fa-sailboat', label: 'Boat' }
        ]; %>

        <% filterOptions.forEach(option => { %>
            <div class="filter-item">
                <i class="fa-solid <%= option.icon %>"></i>
                <p><%= option.label %></p>
            </div>
        <% }); %>
    </div>

    <div class="tax-toggle">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
        </div>
    </div>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% for (let listing of allListings) { %>
        <div class="col">
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card h-100 border-0 rounded-4 shadow-sm">
                    <img src="<%= listing.image.url %>" class="card-img-top rounded-top-4" alt="listing-image" style="height: 18rem; object-fit: cover;">
                    <div class="card-body">
                        <p class="card-text">
                            <strong><%= listing.title %></strong><br>
                            <%= listing.price ? 'â‚¹' + listing.price.toLocaleString("en-IN") + '/night' : 'Price unavailable' %>
                            <i class="tax-info">&nbsp;+18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
        </div>
    <% } %>
</div>

<script>
    const switchTax = document.getElementById("switchCheckDefault");
    switchTax.addEventListener("click", () => {
        const taxInfo = document.getElementsByClassName("tax-info");
        for (let info of taxInfo) {
            info.style.display = info.style.display !== "inline" ? "inline" : "none";
        }
    });
</script>
